---
import { Picture } from 'astro:assets';

export type Props = BannerIFrameData | BannerImageData;

const { hero_url, hero_alt } = Astro.props;
---

<div>
	{
		typeof hero_url == 'string' ? (
			<iframe src={hero_url} title={hero_alt} loading="lazy" />
		) : (
			<Picture
				src={hero_url}
				alt={hero_alt}
				widths={[240, 540, 720]}
				sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, 720px`}
						/>
		)
	}
</div>

<style lang="scss">
	div {
		height: 100%;
		background-color: var(--base);

		& > * {
			width: 100%;
			height: 100%;
		}
	}

	iframe {
		overflow: hidden;
		border: 0;
	}

	picture img{
	object-fit: cover; aspect-ratio: 3/1; width: 100%; height: auto;
	}
</style>
