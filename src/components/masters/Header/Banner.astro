---
import { Picture } from 'astro:assets';

export type Props = BannerIFrameData | BannerImageData;

const { hero_url, hero_alt } = Astro.props;
---

<div>
	{
		typeof hero_url == 'string' ? (
			<iframe src={hero_url} title={hero_alt} loading="lazy" />
		) : (
			<Picture
				src={hero_url}
				alt={hero_alt}
				pictureAttributes={{
					style: 'object-fit: cover; aspect-ratio: 3/1; width: 100%; height: auto;',
				}}
			/>
		)
	}
</div>

<style lang="scss">
	div {
		height: 100%;
		background-color: var(--base);

		& > * {
			width: 100%;
			height: 100%;
		}
	}

	iframe {
		overflow: hidden;
		border: 0;
	}
</style>
