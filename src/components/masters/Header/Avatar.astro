---
import { Picture } from 'astro:assets';
import avatar from 'assets/me.jpeg';
---

<Picture
	src={avatar}
	alt="Conrad"
	loading="eager"
	decoding="async"
	class="avatar"
	widths={[80, 125]}
	sizes={`(max-width: 425px) 80px, 125px`}
/>

<style>
	.avatar {
		border: solid var(--text) 3px;
		display: block;
		width: var(--step-9);
		height: auto;
		transform: translateY(-50%);
		aspect-ratio: 1;
		border-radius: 100px;
	}
</style>
