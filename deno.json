{
  "compilerOptions": {
    "strict": true,
    "checkJs": true,
    "lib": ["deno.window", "deno.ns", "deno.worker", "ESNext.Array", "ESNext"],
    "verbatimModuleSyntax": true
  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"]
    }
  },

  "tasks": {
    "lint": "deno lint"
  },
  "imports": {
    "@std/path": "jsr:@std/path@^1.0.8",
    "@/": "./src/",
    "@styles/": "./src/styles/",
    "@components/": "./src/components/",
    "@layouts/": "./src/layouts/",
    "@assets/": "./src/assets/"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"]
  },
  "exclude": ["dist/"],
  "lock": false,
  "nodeModulesDir": "auto"
}
